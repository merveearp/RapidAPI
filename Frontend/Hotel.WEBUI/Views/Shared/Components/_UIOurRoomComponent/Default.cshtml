@model List<ResultRoomDto>
@*
    _UIOurRoomComponent
*@
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-dark text-uppercase">Odalarımız</h6>
            <h1 class="mb-5">Odalarımızı <span class="text-dark text-uppercase">Keşfedin</span></h1>
        </div>
        <div class="row g-4">
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item room-hover shadow rounded overflow-hidden">

                        <div class="position-relative room-img-wrap">
                            <img class="img-fluid room-img" src="@item.RoomCoverImage" alt="">

                            <small class="price-badge position-absolute bottom-0 end-0 m-3">
                                $@item.Price / Gece
                            </small>

                        </div>


                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@item.Title</h5>
                                <div class="ps-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.IsStar)
                                        {
                                            <small class="fa fa-star text-primary"></small>
                                        }
                                        else
                                        {
                                            <small class="fa fa-star text-muted"></small>
                                        }
                                    }
                                </div>


                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-dark me-2"></i>@item.BedCount Yatak Sayısı</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-dark me-2"></i> @item.BathCount Banyo Sayısı</small>
                                @if (item.Wifi)
                                {
                                    <small>
                                        <i class="fa fa-wifi text-primary me-2"></i> Wi-Fi
                                    </small>
                                }
                                else
                                {
                                    <small>
                                        <i class="fa fa-wifi-slash text-muted me-2"></i> Wi-Fi Yok
                                    </small>
                                }


                            </div>
                            <p class="text-body mb-3">@item.Description</p>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-outline-primary rounded py-2 px-4" href="">Detayları Gör</a>
                                <a class="btn btn-sm btn-dark rounded py-2 px-4" href="">Rezervasyon Yap</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
         
        </div>
    </div>
</div>
<style>
    /* CARD */
    .room-hover {
        transition: transform .35s ease, box-shadow .35s ease;
    }

        .room-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,.15);
        }

    /* IMAGE */
    .room-img-wrap {
        overflow: hidden;
    }

    .room-img {
        transition: transform .5s ease, filter .5s ease;
    }

    .room-hover:hover .room-img {
        transform: scale(1.1);
        filter: brightness(0.85);
    }

    /* PRICE BADGE */
    .price-badge {
        background: rgba(0,0,0,.85);
        color: #fff;
        border-radius: 30px;
        padding: 6px 14px;
        margin-left: 16px;
        font-size: 14px;
    }

    /* CURSOR */
    .room-hover {
        cursor: pointer;
    }
        .room-hover .btn {
            transition: transform .3s ease;
        }

        .room-hover:hover .btn {
            transform: translateY(-3px);
        }

    .price-badge {
        background: rgba(0, 0, 0, 0.75);
        color: #fff;
        border-radius: 30px;
        padding: 6px 16px;
        font-size: 14px;
        backdrop-filter: blur(4px);
    }

</style>