@model CreateSubscribeDto
@*
    _UISubscribeComponent
*@

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center mb-4">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center mb-4">
        @TempData["Error"]
    </div>
}

<form method="post"
      asp-controller="Booking"
      asp-action="_UISubscribeComponent">

    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-10 border rounded p-1">
                <div class="border rounded text-center p-1">
                    <div class="bg-white rounded text-center p-5">

                        <h4 class="mb-4">
                            Mail Bültenine
                            <span class="text-warning text-uppercase">Kayıt Olun</span>
                        </h4>

                        <div class="position-relative mx-auto" style="max-width: 400px;">

                            <input asp-for="Mail"
                                   type="email"
                                   class="form-control w-100 py-3 ps-4 pe-5"
                                   placeholder="E-posta adresinizi giriniz"
                                   required />

                            <button type="submit"
                                    class="btn btn-outline-warning py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">
                                Abone Ol
                            </button>

                        </div>

                        <span asp-validation-for="Mail"
                              class="text-danger d-block mt-2"></span>

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

