@model List<StaffViewModel>
@{
    ViewData["Title"] = "Personel";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

 
    <div class="d-flex justify-content-start mb-3">
        <a href="/Staff/AddStaff" class="btn btn-rounded btn-outline-info">
            <i class="fa fa-plus me-1"></i>
            Yeni Personel Ekle
        </a>
    </div>

    <div class="card-title mb-3">
        <h4 class="mb-0">Personel Tablosu</h4>
    </div>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th style="width:50px">#</th>
                    <th>Personel Profil Fotografı</th>
                    <th>Personel Adı</th>
                    <th>Personel Ünvanı</th>
                    <th style="width:240px">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-2">
                            Henüz içerik bulunmamaktadır
                        </td>
                    </tr>
                }
                else
                {
                   @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>

                            <td>
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) 
                                            ? "/images/default-avatar.png" 
                                            : item.ImageUrl)"
                                     class="rounded-circle"
                                     style="width:45px; height:45px; object-fit:cover;" />
                            </td>

                            <td>@item.FullName</td>
                            <td>@item.Title</td>

                            <td class="text-nowrap">
                                <a asp-action="Detail"
                                   asp-route-id="@item.StaffId"
                                   class="btn btn-sm btn-outline-secondary me-1">
                                    Detay
                                </a>

                                <a asp-action="UpdateStaff"
                                   asp-route-id="@item.StaffId"
                                   class="btn btn-sm btn-success me-1">
                                    Güncelle
                                </a>

                                <a asp-action="DeleteStaff"
                                   asp-route-id="@item.StaffId"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>


