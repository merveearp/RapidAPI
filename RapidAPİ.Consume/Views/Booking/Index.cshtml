@model List<BookingAPIViewModel.Result>
@{
    Layout = null;
    int count = 0;
}
@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
    <label>Şehir Id Giriniz</label>
    <input type="text" class="form-control" name="cityId" />
    <button class="btn btn-primary">Şehir için Otelleri Listele </button>
}

<div class="container">
    
    <table class="table table-borderd">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>

       @foreach(var item in Model)
        {
            count++;
            <tr>

                <th>@count</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>

        }

    </table>


</div>